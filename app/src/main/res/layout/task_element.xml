<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/line"
        android:background="@color/colorAccent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:text="This is Task Summary bbbdddm dddd something else is happening here so we should bla bla bla"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/taskSummary"
            android:typeface="serif"
            android:layout_weight="0.27"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="10/10/2016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startDate"
            android:typeface="normal"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="normal"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <TextView
            android:text="10/10/2016"
            android:id="@+id/endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:typeface="normal"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <Button
            android:background="@drawable/element_not_enabled"
            android:layout_alignParentEnd="true"
            android:id="@+id/taskCompletedState"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/completed_hours"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="5dp"
            android:id="@+id/completedTaskHours"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>